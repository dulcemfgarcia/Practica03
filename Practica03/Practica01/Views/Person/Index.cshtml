@using Classlibrary
@model AVL<Practica01.Models.Person>

@{
    ViewData["Title"] = "Index";
}

@if (Model.TreeList.Count != 0)
{

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Companies
                </th>
                <th>
                    Datebirth
                </th>
                <th>
                    Address
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TreeList)
            {
            <tr>
                <td name="name">
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td name="dpi">
                    @Html.DisplayFor(modelItem => item.companies)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.datebirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                <td>

                    @Html.ActionLink("Delete", "Delete", new { Persona = item.dpi })
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <div style="text-align:center">
        <label>Aún no hay registros.</label>
        <br>
    </div>
}