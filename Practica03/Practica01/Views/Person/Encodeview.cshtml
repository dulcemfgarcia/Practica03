@using Classlibrary
@model AVL<Practica01.Models.Person>

@{
    ViewData["Title"] = "Encodeview";
}

<h1>Codificación de DPI por reclutamiento de empresa</h1>

<div>
    <h5>DPI CODIFICADO</h5>
    <hr />
    @if (Model.Encoded.Count != 0)
    {
<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>
                DPI codificado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Encoded)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item)
                </td>
            </tr>
        }
    </tbody>
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Datebirth
            </th>
            <th>
                Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CompaniesTree)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datebirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
        </tr>
        }
    </tbody>
</table>
    }
    else
    {
        <div style="text-align:center">
            <label>No hay registros de esa empresa</label>
            <br>
        </div>
    }
</div>
<div>
    <a asp-action="Index">Regresar a la lista de reclutas</a>
</div>
